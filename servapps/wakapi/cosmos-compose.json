{
  "cosmos-installer": {
    "form": [
      {
        "name": "WAKAPI_PASSWORD_SALT",
        "label": "Wakapi Pasword Salt",
        "initialValue": "UFDA0SGnV9Zeb1T6jTvkuWV8FTj7p92d",
        "type": "text"
      }
    ]
  },
  "minVersion": "0.8.0",
  "services": {
    "{ServiceName}": {
      "container_name": "{ServiceName}",
      "image": "ghcr.io/muety/wakapi",
      "environment": [
        "WAKAPI_PASSWORD_SALT={Context.WAKAPI_PASSWORD_SALT}",
        "PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin",
        "ENVIRONMENT=prod",
        "WAKAPI_DB_TYPE=sqlite3",
        "WAKAPI_DB_USER=",
        "WAKAPI_DB_PASSWORD=",
        "WAKAPI_DB_HOST=",
        "WAKAPI_DB_NAME=/data/wakapi.db",
        "WAKAPI_LISTEN_IPV4=0.0.0.0",
        "WAKAPI_INSECURE_COOKIES=true",
        "WAKAPI_ALLOW_SIGNUP=true"
      ],
      "labels": {},
      "ports": [],
      "volumes": [
        {
          "Type": "volume",
          "Source": "{ServiceName}-data",
          "Target": "/data"
        }
      ],
      "networks": {
        "bridge": {}
      },
      "hostname": "{ServiceName}",
      "network_mode": "default",
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expost {ServiceName} to the internet",
          "useHost": false,
          "target": "http://{ServiceName}:3000",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "StartShield": {
            "Enabled": true
          }
        }
      ],
      "restart": "unless-stopped"
    }
  }
}
